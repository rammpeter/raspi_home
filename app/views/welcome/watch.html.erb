<div style="font-size: 600%; padding-left: 10px;">
  <% if @temperatur.nil? %>
    Nach Beginn der Temperaturerfassung wird hier der aktuelle Status angezeigt
  <% else %>
    <b style="text-align: center">Pool <%= @temperatur.created_at.strftime('%H:%M:%S') %></b>
    <table style="border: 1px; width: 100%;">
      <tr>
        <td>Sonne</td>
        <td style="text-align: right"><%=  @temperatur.Sonne.round(1) %></td>
      </tr>
      <tr>
        <td>Schatten</td>
        <td style="text-align: right"><%=  @temperatur.Schatten.round(1) %></td>
      </tr>
      <tr>
        <td>Vorlauf</td>
        <td style="text-align: right"><%=  @temperatur.Vorlauf.round(1) %></td>
      </tr>
      <tr>
        <td>RÃ¼cklauf</td>
        <td style="text-align: right"><%=  @temperatur.Ruecklauf.round(1) %></td>
      </tr>
      <tr>
        <td>Differenz</td>
        <td style="text-align: right"><%=  (@temperatur.Vorlauf - @temperatur.Ruecklauf).round(1) %></td>
      </tr>
      <tr>
        <td>Pumpe</td>
        <td><%= @temperatur.Pumpenstatus == 0 ? 'AUS' : 'AN' %></td>
      </tr>
      <tr>
        <td colspan="2"><%= @temperatur.pumpe_an_grund %></td>
      </tr>
      <tr>
        <td colspan="2"><%= @konfiguration.modus_text %></td>
      </tr>
    </table>
  <% end %>
</div>
